<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_13"
    tools:context=".AlarmTimeActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="157dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toTopOf="@+id/alarmrunning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.662"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/animation_llzemkyu">

    </com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/alarmrunning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="@string/alarm_ringing"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stopalarm"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:background="@drawable/ripple_effect"
        android:clickable="true"
        android:text="@string/stop_alarm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmrunning"
        app:layout_constraintVertical_bias="0.015"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/showtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopalarm" />

</androidx.constraintlayout.widget.ConstraintLayout>